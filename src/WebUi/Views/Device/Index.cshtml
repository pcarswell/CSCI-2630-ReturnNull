@model EDeviceClaims.WebUi.Models.DeviceListViewModel

<h1 align="center">Your Insured Devices</h1>


<div>

    <table class="table" id="deviceListTable">
        <tr>
            <th>@Html.Label("Device")</th>
            <th>@Html.Label("Serial Number")</th>
            <th>@Html.Label("Policy")</th>
            <th> @Html.Label("View Details")</th>
        </tr>

        @foreach (var device in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => device.Name)</td>
                <td>@Html.DisplayFor(modelItem => device.SerialNumber)</td>
                <td>@Html.DisplayFor(modelItem => device.PolicyNumber)</td>
                <td>@Html.ActionLink("View Details", "Details", "Device", routeValues: new { policyId = device.PolicyId }, htmlAttributes: new { Class = "btn btn-primary btn-lg" }) </td>

            </tr>
        }
    </table>

</div>    

<style>
    
    table#deviceListTable { margin: auto; width: 75%; background-color: #f1f1c1; text-align: center; }

    table#deviceListTable tr:nth-child(even) { background-color: #eee; }

    table#deviceListTable tr:nth-child(odd) { background-color: #fff; }

    table#deviceListTable th { color: black; background-color: gray; text-align: center; }

    table, th, td { border: 1px solid black; }

    table, th, td { border: 1px solid black; border-collapse: collapse; }

    table, th, td { border: 1px solid black; border-collapse: collapse; }

    th, td { padding: 15px; }

</style> 

