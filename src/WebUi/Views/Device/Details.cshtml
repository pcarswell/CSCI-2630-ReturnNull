@model EDeviceClaims.WebUi.Models.DeviceViewModel


<h2 style="text-align: center;">@Model.Name Details</h2>

<div>

    <table class="table" id="deviceListTable">
        <tr>
            <th>@Html.Label("Device")</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>@Html.Label("Serial Number")</th>
            <td>@Model.SerialNumber</td>
        </tr>
        <tr>
            <th>@Html.Label("Policy")</th>
            <td>@Model.PolicyNumber</td>
        </tr>
    </table>
</div>

<div style="text-align: center; padding-top: 25px;">
    
    @if(Model.PendingClaim)
    {
        @Html.ActionLink("View Claim", "Details", "Claim", routeValues: new { policyId = Model.PolicyId }, 
       htmlAttributes: new { Class = "btn btn-warning btn-lg" })
    }
    else
    {
        @Html.ActionLink("Open Claim", "Open", "Claim", routeValues: new { policyId = Model.PolicyId },
    htmlAttributes: new { Class = "btn btn-danger btn-lg" })
    }
    
    
    

</div>

<style>
    table#deviceListTable {
        margin: auto;
        width: 25%;
        background-color: #f1f1c1;
        text-align: center;
    }

        table#deviceListTable tr:nth-child(even) {
            background-color: #eee;
        }

        table#deviceListTable tr:nth-child(odd) {
            background-color: #fff;
        }

        table#deviceListTable th {
            color: black;
            background-color: gray;
            text-align: left;
        }

    table, th, td {
        border: 1px solid black;
    }

    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    th, td {
        padding: 15px;
    }
</style> 
