@{
    ViewBag.Title = "Home Page";
}
<style>
    .thisJumbotron {

  background: url(/Content/Images/image.jpg); /* Moved to Content folder to get around a security configuration. ---JDM */
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-attachment: fixed;
  display: block;
  position: fixed;
  height: 50%;
  width: 50%;
  top: 50%;
  left: 50%;
  margin-top: -50px;
  margin-left: -50px;
  transform: translate(-50%, -50%);/*Does not work with Internet Explorer or Opera*/ 
  /* A few of these talk about Vers. 8.0 being incompatible (according to Resharper)...I think we're fine cuz not even MS pushes IE anymore. --JDM */
  padding: 100px;
  font-size: 21px;
  font-weight: 200;
  line-height: 2.1428571435;
  color: #eeeeee;
  border-width: 5px;
  border-style: solid;
}

</style>

<div class="thisJumbotron">

    @if (Request.IsAuthenticated)
    {
        <h1>Hello! Hit the big button to view your devices!</h1>
        <br/>
        @Html.ActionLink("View Devices", "Index", "Device", routeValues: null, htmlAttributes: new {Class = "btn btn-primary btn-lg"})
    }
    else
    {
        <h1>Hello! Hit the big button to login!</h1>
        <br/>
        @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new {id = "loginLink", @Class = "btn btn-primary btn-lg"})
    }
</div>.